<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_background"
    android:id="@+id/main"
    tools:context=".ApplicationForm"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/card_background"
            android:elevation="2dp"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/tenant_application"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Personal Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_details"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edt_background"
                android:hint="@string/first_name"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"/>

            <EditText
                android:id="@+id/et_last_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edt_background"
                android:hint="@string/last_name"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"/>

            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edt_background"
                android:hint="@string/phone_number"
                android:inputType="phone"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"/>

            <EditText
                android:id="@+id/et_id_number"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edt_background"
                android:hint="@string/id_number"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"/>

            <EditText
                android:id="@+id/et_age"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edt_background"
                android:hint="@string/age"
                android:inputType="number"
                android:padding="12dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"/>
        </LinearLayout>

        <!-- Employment & Income Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/employment_income"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/et_job_title"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edt_background"
                android:hint="@string/job_title"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"/>

            <EditText
                android:id="@+id/et_income"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edt_background"
                android:hint="@string/income"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"/>

            <Spinner
                android:id="@+id/spinner_income_source"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edt_background"
                android:padding="12dp"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>

        <!-- Documents & Lease Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/documents_lease"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tv_uploaded_docs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_documents_uploaded"
                android:textColor="@color/text_secondary"
                android:padding="8dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/btn_upload_docs"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/gradient_green_blue"
                android:text="@string/upload_documents"
                android:textColor="@color/text_white"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="12dp"/>

            <CheckBox
                android:id="@+id/cb_agree_lease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agree_lease"
                android:layout_marginBottom="20dp"
                android:textColor="@color/text_primary"/>
        </LinearLayout>

        <!-- Submit Button -->
        <TextView
            android:id="@+id/btn_submit_application"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/gradient_green_blue"
            android:text="@string/submit_documents"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="20dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</ScrollView>
