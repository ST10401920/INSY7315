<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/tvRequestTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Request title"
        android:textSize="14sp"
        android:textColor="?attr/textDarkGray" /> <!-- Uses theme attribute -->

    <TextView
        android:id="@+id/tvRequestStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="?attr/textBlue" /> <!-- Create an attr if you want it theme-reactive -->
</LinearLayout>
